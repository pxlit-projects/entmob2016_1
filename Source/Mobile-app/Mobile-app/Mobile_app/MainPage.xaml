<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mobile_app"
             x:Class="Mobile_app.MainPage"
             BackgroundImage="background.jpg">

  <StackLayout Orientation="Vertical" Spacing="10" Margin="20">
    <Image Source="icon.png" HeightRequest="143"/>
    <Label Text="Please Log in." FontSize="20"></Label>
    <Entry x:Name="usernameEntry" Placeholder="Username" TextColor="Black"></Entry>
    <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" TextColor="Black" ></Entry>
    <Button Clicked="OnLoginClicked" BackgroundColor="#3FC2D0" FontSize="20" TextColor="White" Text="Login" />
  </StackLayout>
</ContentPage>