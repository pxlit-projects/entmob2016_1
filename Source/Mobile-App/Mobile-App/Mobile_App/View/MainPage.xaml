<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mobile_App"
             x:Class="Mobile_App.MainPage"
             BackgroundImage="background.jpg">
  <StackLayout Orientation="Vertical" Spacing="10" >
    <Image Source="banner.png" HeightRequest="143"/>
    <Label Text="Please Log in." FontSize="20"></Label>
    <Entry x:Name="usernameEntry" Placeholder="Username" Text="{Binding Username, Mode=TwoWay}" TextColor="Black"></Entry>
    <Entry x:Name="passwordEntry" Placeholder="Password" Text="{Binding Password}"  IsPassword="True" TextColor="Black" ></Entry>
    <Button Command="{Binding LoginCommand}" BackgroundColor="#3FC2D0" FontSize="20" TextColor="White" Text="Login" />
  </StackLayout>
</ContentPage>